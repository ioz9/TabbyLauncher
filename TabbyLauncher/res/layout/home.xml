<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/tabby_kruger"
    android:orientation="vertical" >

        <TextView
            android:id="@+id/application_name_text_view"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Loading..."
            android:textColor="#DDDDCC"
            android:textSize="24dp"
            android:textStyle="bold" />

        <org.tabbylauncher.Rotor
            android:id="@+id/rotor"
            android:layout_width="320dp"
            android:layout_height="320dp" />

<!--         <TextView -->
<!--             android:layout_width="fill_parent" -->
<!--             android:layout_height="0dp" -->
<!--             android:layout_weight="1" -->
<!--             android:gravity="center" /> -->

    <GridView
        android:id="@+id/all_apps"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:alwaysDrawnWithCache="true"
        android:background="@color/Now_0_40o"
        android:columnWidth="78dp"
        android:drawSelectorOnTop="false"
        android:numColumns="auto_fit"
        android:persistentDrawingCache="animation|scrolling"
        android:scrollbars="none"
        android:stackFromBottom="false"
        android:stretchMode="spacingWidth"
        android:visibility="gone" />

    <org.tabbylauncher.component.StackLayoutBar
        android:id="@+id/stacklayoutbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

</LinearLayout>